venv/
env/
ENV/

# Base de datos local
#db.sqlite3
#*.db

# Archivos de Python
__pycache__/
*.py[cod]
*$py.class
*.so

# Archivos de Django
*.log
local_settings.py
media/

# Archivos de configuración sensibles
.env
.env.local
.env.production
.env.staging

# Archivos del sistema
.DS_Store
Thumbs.db

# IDEs
.vscode/
.idea/
*.swp
*.swo

